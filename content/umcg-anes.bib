@article{Mebius20,
  author = {Mirthe J Mebius and Catherina M Bilardo and Martin C J Kneyber and Marco Modestini and Tjark Ebels and Rolf M F Berger and Arend F Bos and Elisabeth M W Kooi},
  title = {Onset of brain injury in infants with prenatally diagnosed congenital heart disease},
  journal = {PLoS One},
  year = {2020},
  volume = {15},
