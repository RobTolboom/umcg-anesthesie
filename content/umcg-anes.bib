  doi = {10.1016/j.febslet.2014.01.061},
  pmid = {24530525},
  abstract = {(+)-Nootkatone is a natural sesquiterpene ketone used in grapefruit and citrus flavour compositions. It occurs in small amounts in grapefruit and is a major component of Alaska cedar (Callitropsis nootkatensis) heartwood essential oil. Upon co-expression of candidate cytochrome P450 enzymes from Alaska cedar in yeast with a valencene synthase, a C. nootkatensis valencene oxidase (CnVO) was identified to produce trans-nootkatol and (+)-nootkatone. Formation of (+)-nootkatone was detected at 144±10μg/L yeast culture. CnVO belongs to a new subfamily of the CYP706 family of cytochrome P450 oxidases.},
}

@article{Mindt23,
  author = {Melanie Mindt and Lenny Ferrer and Dirk Bosch and Katarina Cankar and Volker F Wendisch},
  title = {De novo tryptophanase-based indole production by metabolically engineered Corynebacterium glutamicum},
